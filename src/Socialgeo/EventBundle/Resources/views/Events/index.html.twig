<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>District_id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Created</th>
            <th>Approved</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('events_show', { 'id': entity.id, 'district': district  }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.owner }}</td>
            <td>{{ entity.districtid }}</td>
            <td>{{ entity.title }}</td>
            <td>{{ entity.body }}</td>
            <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{{ entity.approved }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('events_show', { 'id': entity.id, 'district': district  }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('events_edit', { 'id': entity.id, 'district': district  }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('events_new', { 'district': district }) }}">
            Create a new entry
        </a>
    </li>
</ul>
