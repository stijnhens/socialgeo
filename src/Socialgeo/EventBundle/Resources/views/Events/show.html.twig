<h1>Events</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Owner</th>
            <td>{{ entity.owner }}</td>
        </tr>
        <tr>
            <th>District_id</th>
            <td>{{ entity.districtid }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Body</th>
            <td>{{ entity.body }}</td>
        </tr>
        <tr>
            <th>Created</th>
            <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Approved</th>
            <td>{{ entity.approved }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('events', {'district': district }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('events_edit', { 'id': entity.id, 'district': district  }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('events_delete', { 'id': entity.id, 'district': district  }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
