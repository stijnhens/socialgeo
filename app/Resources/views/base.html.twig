<!DOCTYPE html>

<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <meta charset="utf-8" />

    <!-- Set the viewport width to device width for mobile -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Beschrijving txt">
    <meta name="keywords" content="keywords, komen, hier, gescheiden, door, een, komma">

    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/event/css/bootstrap.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/event/css/bootstrap-responsive.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('bundles/event/css/app.css') }}" />
    {% endblock %}


    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body>





<section id="wrap">
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#">SOCIAL GEO</a>
                <div class="nav-collapse collapse">
                    <nav class="nav">
                        <li class="active"><a href="{{ path('event') }}">HOME</a></li>
                        <li><a href="#evenementen">EVENEMENTEN</a></li>
                        <li><a href="#media">MEDIA</a></li>
                        <li><a href="{{ path('wijken') }}">WIJKEN</a></li>
                        <li><a href="#wijken">{% block user %}{% endblock %}</a></li>
                    </nav>

                    <nav class="nav pull-right">

                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        <li><a href="{{ path('fos_user_profile_show') }}"><i class="icon-user icon-white"></i></a></li>
                        <li><a href="#wijken"><i class="icon-globe icon-white"></i></a></li>
                        <li><a href="#wijken"><i class="icon-envelope icon-white"></i></a></li>
                        <li><a href="#media"><i class="icon-star icon-white"></i></a></li>
                        <li><a href="#media"><i class="icon-glass icon-white"></i></a></li>

                    {% else %}
                        {% render url('loginpart') %}
                    {% endif %}

                    </nav>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </header>
    <div class="spacer"></div>

    <section class="container" id="main">

        {% block body %}{% endblock %}

    </section>
    <div id="push"></div>
</section>

<footer>
    <div class="container">
        <p class="muted credit">Example courtesy <a href="http://martinbean.co.uk">Martin Bean</a> and <a href="http://ryanfait.com/sticky-footer/">Ryan Fait</a>.</p>
    </div>
</footer>




<!------------------------- ALL SCRIPTS START HERE -->
<!-- Included JS Files (Compressed) -->
<script src="http://code.jquery.com/jquery-latest.js"></script>
<script src="{{ asset('bundles/event/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('bundles/event/images/glyphicons-halflings.png') }}"></script>

<!-- Initialize JS Plugins -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqGoCruJyrUzxz3V4ON0JyOAGnzKZo21U&sensor=false"></script>

<!-- Initialize JS APP -->
<script src="{{ asset('bundles/event/js/app.js') }}"></script>
{% block javascripts %}{% endblock %}
</body>

</html>
